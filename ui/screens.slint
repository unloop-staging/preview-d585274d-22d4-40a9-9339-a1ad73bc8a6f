export component ControlScreen inherits Rectangle {
    in-out property <AppData> data;
    
    callback target-changed(float);
    callback mode-changed(string);
    
    background: transparent;
    
    VerticalLayout {
        SmallAppBar {
            title: "Volume";
        }
        
        Rectangle {
            vertical-stretch: 1;
            
            VerticalLayout {
                padding: 24px;
                spacing: 32px;
                alignment: center;
                
                VerticalLayout {
                    spacing: 8px;
                    alignment: center;
                    
                    Text {
                        text: "Current Volume";
                        font-size: 14px;
                        color: #9E9E9E;
                        horizontal-alignment: center;
                    }
                    
                    HorizontalLayout {
                        alignment: center;
                        spacing: 4px;
                        
                        Text {
                            text: data.volume-level;
                            font-size: 64px;
                            font-weight: 300;
                            color: white;
                        }
                        
                        Text {
                            text: "%";
                            font-size: 24px;
                            color: #9E9E9E;
                            vertical-alignment: bottom;
                        }
                    }
                }
                
                Rectangle {
                    height: 1px;
                    background: #424242;
                }
                
                VerticalLayout {
                    spacing: 16px;
                    alignment: center;
                    
                    Text {
                        text: "Set Volume";
                        font-size: 14px;
                        color: #9E9E9E;
                        horizontal-alignment: center;
                    }
                    
                    ValueStepper {
                        value <=> data.target-volume;
                        min: 0;
                        max: 100;
                        step: 5;
                        unit: "%";
                        
                        changed(val) => { target-changed(val); }
                    }
                }

                HorizontalLayout {
                    alignment: center;
                    spacing: 8px;
                    
                    Rectangle {
                        width: 80px;
                        height: 40px;
                        border-radius: 20px;
                        background: data.mode == "tv" ? #3AA1F5 : #424242;
                        
                        TouchArea {
                            clicked => { mode-changed("tv"); }
                        }
                        
                        Text {
                            text: "TV";
                            font-size: 14px;
                            color: white;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    Rectangle {
                        width: 80px;
                        height: 40px;
                        border-radius: 20px;
                        background: data.mode == "hdmi" ? #3AA1F5 : #424242;
                        
                        TouchArea {
                            clicked => { mode-changed("hdmi"); }
                        }
                        
                        Text {
                            text: "HDMI";
                            font-size: 14px;
                            color: white;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                    Rectangle {
                        width: 80px;
                        height: 40px;
                        border-radius: 20px;
                        background: data.mode == "streaming" ? #3AA1F5 : #424242;
                        
                        TouchArea {
                            clicked => { mode-changed("streaming"); }
                        }
                        
                        Text {
                            text: "Streaming";
                            font-size: 14px;
                            color: white;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }
                    }
                }
            }
        }
    }
}

